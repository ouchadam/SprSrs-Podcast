<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MatchWidth">

    <TextView
            android:id="@+id/add_subscription_title"
            style="@style/MatchWidth"
            android:text="@string/add_subscription_title"/>

    <EditText
            android:id="@+id/add_subscription_edit_text"
            style="@style/MatchWidth"
            android:inputType="textFilter"
            android:text="http://www.howstuffworks.com/podcasts/stuff-you-should-know.rss"/>

    <LinearLayout
            style="@style/MatchWidth"
            android:orientation="horizontal">

        <Button
                android:id="@+id/cancel_subscription_btn"
                style="@style/MatchWidth"
                android:layout_weight="1"
                android:text="Cancel"/>

        <Button
                android:id="@+id/add_subscription_btn"
                style="@style/MatchWidth"
                android:layout_weight="1"
                android:text="OK"/>

    </LinearLayout>

</LinearLayout>