<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.ouchadam.podcast" android:versionCode="1" android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:icon="@drawable/app_launcher" android:label="@string/app_name"
                 android:name="com.ouchadam.podcast.application.RSS"
                 android:theme="@style/MyTheme">

        <service android:enabled="true" android:name="com.ouchadam.podcast.service.XmlFetcherService"></service>

        <activity android:name=".activity.FeedListActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.ouchadam.podcast.activity.DetailsActivity"
                  android:label="@string/app_name">
        </activity>

        <provider
                android:name="com.ouchadam.podcast.provider.FeedProvider"
                android:authorities="com.ouchadam.podcast.provider.FeedProvider" >
        </provider>
    </application>


</manifest>

