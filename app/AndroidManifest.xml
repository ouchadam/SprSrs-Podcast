<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.ouchadam.podcast"
  android:versionCode="1"
  android:versionName="1.0">

  <uses-sdk
    android:minSdkVersion="11"
    android:targetSdkVersion="17" />
  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:icon="@drawable/app_launcher"
    android:label="@string/app_name"
    android:name="com.ouchadam.podcast.application.RSS"
    android:theme="@style/MyTheme">

    <activity android:name=".activity.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".activity.FeedListActivity"
      android:label="Items!" />
    <activity
      android:name="com.ouchadam.podcast.activity.DetailsActivity"
      android:label="Details!" />

    <!-- PROVIDERS -->
    <provider
      android:name=".database.SprSrsProvider"
      android:authorities="com.ouchadam.podcast"
      android:exported="false" />

  </application>


</manifest>

